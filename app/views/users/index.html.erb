<div class="col-12">
  <div class="row">
    <div class="col-auto mr-auto">
      <h5>List of users</h5>
    </div>
    <div class="col-auto"><%= link_to 'New user', new_user_path, class: 'btn btn-primary'%></div>
  </div>

  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>Email</th>
          <th>Role</th>
          <th>Status</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.role.titleize %></td>
            <td><%= user.status %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Delete', user_path(user), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="5">
            <%= will_paginate @users, renderer: BootstrapPagination::Rails, bootstrap: 3, class: 'justify-content-end' %>
          </td>
        </tr>
      </tfoot>
    </table>


  </div>
</div>
